<style type="text/css">
    #disclaimer p {
        font-size: 80%;
        padding: 1.5%;
    }

    #disclaimer hr{
        border-color: black;
    }

    #disclaimer{
        border: 1px solid black;
        clear: both;
        width: 80%;
        margin: auto;
        margin-top: 110px;
        margin-bottom: 15px;
    }
</style>

<script type="text/javascript">
    function closeDisclaimer(){
        $("#disclaimer-box").remove();
        $("#disclaimer-content").remove();

        var d = new Date();
        d.setTime(d.getTime() + (24*60*60*7));
        var expires = "expires="+ d.toUTCString();
        document.cookie = "home-{{ channelSlug }}=1; " + expires + ";path=/";
    }
</script>
