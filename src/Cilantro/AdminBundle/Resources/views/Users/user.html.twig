{% extends(':CilantroAdmin:base.html.twig') %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <form method="post" class="form-horizontal" role="form" id="usuario-form">
                {{ form_errors(form) }}

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1-1"> Nombre </label>

                    <div class="col-sm-9">
                        {{ form_row(form.name) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1-1"> Apellido </label>

                    <div class="col-sm-9">
                        {{ form_row(form.lastname) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Usuario </label>

                    <div class="col-sm-9">
                        {{ form_row(form.username) }}
                    </div>
                </div>

                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2"> Contraseña </label>

                    <div class="col-sm-9">
                        {{ form_row(form.plainPassword.first) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-2"> Repetir contraseña </label>

                    <div class="col-sm-9">
                        {{ form_row(form.plainPassword.second) }}
                    </div>
                </div>

                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Email </label>

                    <div class="col-sm-9">
                        {{ form_row(form.email) }}
                    </div>
                </div>

                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-info" type="button" onclick="javascript:saveUser();">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Guardar
                        </button>

                        &nbsp; &nbsp; &nbsp;
                        <button class="btn" type="reset">
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            Borrar
                        </button>
                    </div>
                </div>

                {{ form_widget(form._token) }}
            </form>
        </div>
    </div>

    <script type="text/javascript">
        function saveUser(){
            $('#usuario-form').submit();
        }
    </script>
{% endblock %}